<configuration scan="true" scanPeriod="15 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="z" class="ch.qos.logback.core.FileAppender">
        <file>logs/datafactoryutilities-importer/successionhandling.log</file>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SQL" class="ch.qos.logback.core.FileAppender">
        <file>logs/datafactoryutilities-importer/sql.log</file>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--    <logger name="de.dfutil.importing.Successions">-->
    <!--        <level value="INFO"/>-->
    <!--        <appender-ref ref="SUCCESSIONHANDLING"/>-->
    <!--    </logger>-->
    <!--    <logger name="net.ttddyy.dsproxy.listener">-->
    <!--        <level value="ALL"/>-->
    <!--        <appender-ref ref="SQL"/>-->
    <!--    </logger>-->

    <!-- Setup the root category, add the appenders and set the default level -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
